/* All of it from here: https://www.typescriptlang.org/tsconfig */
{
  "compilerOptions": {
    "rootDirs": [
      "Source_TS"
    ],
    "outDir": "dist", //Use npm build instead, but if you need to use default one, then - "npx -p typescript tsc", add "--noEmitOnError" to prevent file creation in case of error
    "target": "ES6",
    "module": "ESNext", //Borked, AMD and System break everything
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmit": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
  }
}